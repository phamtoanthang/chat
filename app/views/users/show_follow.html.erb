<!-- This is the page to show all the followers or followeds -->
<div class="container">
	<div class="row">
	  <div class="col-md-4">
	    <section class="user_info">
	      <h1>
	        <%= gravatar_for @user %>
	        <%= @user.name %>
	      </h1>
	    </section>
	    <section class="stats">
        	<%= render 'stats' %>
      	</section>
	  </div>
	  <div class="col-md-8">
	    <%= paginate @users %>
		<ul class="users">
		  <% @users.each do |user| %>
		    <li>
		      <%= gravatar_for user, size: 50 %>
		      <%= link_to user.name, user %>
		    </li>
		  <% end %>
		</ul>
		<%= paginate @users %>
	  </div>
	</div>
</div>