<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@user, @user.sent_messages.build] do |f| %>

      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>

      <%= f.label :recipent_id %>
      <%= f.collection_select(:recipent_id, @user.following.all, :id, :name ) %>

      <%= f.submit "Send", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>